<?xml version="1.0" encoding="UTF-8"?>
<!--
  Logback configuration for XTC LSP Server.

  IMPORTANT: LSP servers must use stderr for logging because stdout
  is reserved for JSON-RPC protocol messages. Any output to stdout
  will corrupt the protocol stream.

  NOTE: Keep logging quiet during startup - too much stderr output
  can confuse some LSP clients.
-->
<configuration>
    <!-- Suppress logback's own status messages -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <!-- Log to stderr only - stdout must be kept clean for LSP protocol -->
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- XTC LSP server logs - only WARN and above by default -->
    <logger name="org.xvm.lsp" level="WARN"/>

    <!-- Eclipse LSP4J - only errors -->
    <logger name="org.eclipse.lsp4j" level="ERROR"/>

    <!-- Quiet root logger -->
    <root level="WARN">
        <appender-ref ref="STDERR"/>
    </root>
</configuration>
