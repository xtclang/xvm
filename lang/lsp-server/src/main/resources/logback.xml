<?xml version="1.0" encoding="UTF-8"?>
<!--
  Logback configuration for XTC LSP Server.

  IMPORTANT: LSP servers must use stderr for logging because stdout
  is reserved for JSON-RPC protocol messages. Any output to stdout
  will corrupt the protocol stream.

  Log file location: ~/.xtc/logs/lsp-server.log
  Tail with: tail -f ~/.xtc/logs/lsp-server.log
-->
<configuration>
    <!-- Suppress logback's own status messages -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <!-- Log to stderr for LSP4IJ's Language Servers panel -->
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Log to file for terminal tailing: tail -f ~/.xtc/logs/lsp-server.log -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${user.home}/.xtc/logs/lsp-server.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${user.home}/.xtc/logs/lsp-server.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- XTC LSP server logs - INFO level by default -->
    <!-- Override via: -Plog=DEBUG, -Dxtc.logLevel=DEBUG, or XTC_LOG_LEVEL=DEBUG -->
    <!-- Valid levels: TRACE, DEBUG, INFO, WARN, ERROR -->
    <!-- Precedence: system property > environment variable > default -->
    <variable name="LOG_LEVEL" value="${xtc.logLevel:-${XTC_LOG_LEVEL:-INFO}}"/>
    <logger name="org.xvm.lsp" level="${LOG_LEVEL}"/>

    <!-- Eclipse LSP4J - only errors -->
    <logger name="org.eclipse.lsp4j" level="ERROR"/>

    <!-- Root logger sends to both stderr (for IntelliJ) and file (for tailing) -->
    <root level="WARN">
        <appender-ref ref="STDERR"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
