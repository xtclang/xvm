{
  "name": "Ecstasy",
  "scopeName": "source.xtc",
  "fileTypes": ["x", "xtc"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#annotations" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.documentation.xtc",
          "begin": "/\\*\\*",
          "end": "\\*/",
          "patterns": [
            { "name": "storage.type.class.jsdoc", "match": "@[a-zA-Z]+" }
          ]
        },
        {
          "name": "comment.block.xtc",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.line.double-slash.xtc",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.interpolated.xtc",
          "begin": "\\$\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.xtc", "match": "\\\\." },
            {
              "name": "meta.template.expression.xtc",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [{ "include": "$self" }]
            }
          ]
        },
        {
          "name": "string.quoted.double.xtc",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.xtc", "match": "\\\\." }
          ]
        },
        {
          "name": "string.quoted.single.xtc",
          "match": "'([^'\\\\]|\\\\.)+'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.xtc",
          "match": "\\b0[xX][0-9a-fA-F][0-9a-fA-F_]*\\b"
        },
        {
          "name": "constant.numeric.binary.xtc",
          "match": "\\b0[bB][01][01_]*\\b"
        },
        {
          "name": "constant.numeric.float.xtc",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.xtc",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "annotations": {
      "name": "storage.type.annotation.xtc",
      "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.xtc",
          "match": "\\b(if|else|switch|case|default|for|while|do|foreach|break|continue|return|try|catch|finally|throw|using|assert)\\b"
        },
        {
          "name": "keyword.declaration.xtc",
          "match": "\\b(module|package|class|interface|mixin|service|const|enum|typedef|import|construct)\\b"
        },
        {
          "name": "storage.modifier.xtc",
          "match": "\\b(public|protected|private|static|abstract|final|immutable|extends|implements|incorporates|into|inject|conditional)\\b"
        },
        {
          "name": "keyword.other.xtc",
          "match": "\\b(new|this|super|outer|is|as|void)\\b"
        },
        {
          "name": "constant.language.boolean.xtc",
          "match": "\\b(True|False)\\b"
        },
        {
          "name": "constant.language.null.xtc",
          "match": "\\bNull\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.builtin.xtc",
          "match": "\\b(Bit|Boolean|Byte|Char|Dec|Float|Int|Int8|Int16|Int32|Int64|Int128|IntN|UInt|UInt8|UInt16|UInt32|UInt64|UInt128|UIntN|String|Object|Void|Array|List|Map|Set|Tuple|Function|Type|Class|Enum|Exception|Iterator|Iterable|Collection|Sequence|Range|Interval)\\b"
        },
        {
          "name": "entity.name.type.xtc",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.xtc",
          "match": "==|!=|<=|>=|<=>|<|>"
        },
        {
          "name": "keyword.operator.assignment.compound.xtc",
          "match": "\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=|>>>=|:=|\\?="
        },
        {
          "name": "keyword.operator.logical.xtc",
          "match": "&&|\\|\\||\\^\\^|!"
        },
        {
          "name": "keyword.operator.bitwise.xtc",
          "match": "&|\\||\\^|~|<<|>>>|>>"
        },
        {
          "name": "keyword.operator.arithmetic.xtc",
          "match": "\\+\\+|--|\\+|-|\\*|/|%|/%"
        },
        {
          "name": "keyword.operator.range.xtc",
          "match": "\\.\\.<|\\.\\."
        },
        {
          "name": "keyword.operator.elvis.xtc",
          "match": "\\?:|\\?\\."
        },
        {
          "name": "keyword.operator.assignment.xtc",
          "match": "="
        }
      ]
    }
  }
}
