{
    "name": "xtc-language",
    "displayName": "XTC Language Support",
    "description": "XTC (Ecstasy) language support with syntax highlighting and LSP features",
    "version": "0.4.4",
    "publisher": "xtclang",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/xtclang/xvm"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "xtc",
        "ecstasy",
        "xvm"
    ],
    "activationEvents": [
        "onLanguage:xtc"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "xtc",
                "aliases": [
                    "XTC",
                    "Ecstasy",
                    "xtc"
                ],
                "extensions": [
                    ".x"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./icons/xtc.svg",
                    "dark": "./icons/xtc.svg"
                }
            }
        ],
        "grammars": [
            {
                "language": "xtc",
                "scopeName": "source.xtc",
                "path": "./syntaxes/xtc.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "xtc.createProject",
                "title": "XTC: Create New Project"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package",
        "lint": "eslint src/"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@types/node": "^22.10.0",
        "@types/vscode": "^1.96.0",
        "@vscode/vsce": "^3.2.0",
        "eslint": "^9.17.0",
        "typescript": "^5.7.0",
        "typescript-eslint": "^8.19.0"
    }
}
